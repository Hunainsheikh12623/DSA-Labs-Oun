// Task 37: Stack using Array

Algorithm:
Start
1. Create array stack[]
2. Provide menu: 1=Push, 2=Pop, 3=Peek, 4=Exit
3. For Push: check if full, else insert
4. For Pop: check if empty, else remove
5. For Peek: show top element
6. Repeat until exit
End

import java.util.Scanner;

class StackArray2 {
    static int top = -1;
    static int[] stack = new int[5];

    static void push(int x) {
        if(top == stack.length - 1) {
            System.out.println("Stack Overflow");
        } else {
            stack[++top] = x;
            System.out.println(x + " pushed");
        }
    }

    static void pop() {
        if(top == -1) {
            System.out.println("Stack Underflow");
        } else {
            System.out.println(stack[top--] + " popped");
        }
    }

    static void peek() {
        if(top == -1) {
            System.out.println("Stack is empty");
        } else {
            System.out.println("Top = " + stack[top]);
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int choice;
        do {
            System.out.println("\n1.Push 2.Pop 3.Peek 4.Exit");
            choice = sc.nextInt();
            switch(choice) {
                case 1: 
                    System.out.print("Enter value: ");
                    push(sc.nextInt()); break;
                case 2: pop(); break;
                case 3: peek(); break;
                case 4: System.out.println("Exiting..."); break;
                default: System.out.println("Invalid choice");
            }
        } while(choice != 4);
    }
}

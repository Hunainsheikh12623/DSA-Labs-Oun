// Task 6: Logical Operations

Algorithm:
Start
1. Initialize a=5, b=10
2. Apply (a<b && b>0), (a>10 || b>0), !(a<b)
3. Print results
End

class LogicalOps2 {
    public static void main(String[] args) {
        int a = 5, b = 10;

        System.out.println("a<b && b>0 = " + (a<b && b>0));
        System.out.println("a>10 || b>0 = " + (a>10 || b>0));
        System.out.println("!(a<b) = " + !(a<b));
    }
}

